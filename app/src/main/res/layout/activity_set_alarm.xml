<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="red.padraig.alarmapp.ui.activities.SetAlarmActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edittext_setalarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:hint="Time"/>

    <EditText
        android:id="@+id/edittext_setalarm_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:hint="Days"
        />

    <EditText
        android:id="@+id/edittext_setalarm_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:hint="Active?"
        />

    <Button
        android:id="@+id/button_setalarm_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"/>
</LinearLayout>
